# NAR and Working Directories #
nifi.stateless.nar.directory={{ NIFI_STATELESS_NAR_DIRECTORY | default('./lib') }}
nifi.stateless.working.directory={{ NIFI_STATELESS_WORKING_DIRECTORY | default('./work/stateless') }}

# Security Properties #
nifi.stateless.security.keystore={{ NIFI_STATELESS_SECURITY_KEYSTORE | default('') }}
nifi.stateless.security.keystoreType={{ NIFI_STATELESS_SECURITY_KEYSTORETYPE | default('') }}
nifi.stateless.security.keystorePasswd={{ NIFI_STATELESS_SECURITY_KEYSTOREPASSWD | default('') }}
nifi.stateless.security.keyPasswd={{ NIFI_STATELESS_SECURITY_KEYPASSWD | default('') }}
nifi.stateless.security.truststore={{ NIFI_STATELESS_SECURITY_TRUSTSTORE | default('') }}
nifi.stateless.security.truststoreType={{ NIFI_STATELESS_SECURITY_TRUSTSTORETYPE | default('') }}
nifi.stateless.security.truststorePasswd={{ NIFI_STATELESS_SECURITY_TRUSTSTOREPASSWD | default('') }}
nifi.stateless.sensitive.props.key={{ NIFI_STATELESS_SENSITIVE_PROPS_KEY | default('') }}

# Extension Client Configuration #
# Zero or more Nexus repositories may be specified here.
# The following client communicates with Maven Central. To use it, uncomment the following 4 lines.
# Additional clients can be added by adding duplicate properties but changing mvn-central to a different key.
#nifi.stateless.extension.client.mvn-central.type=nexus
#nifi.stateless.extension.client.mvn-central.timeout=30 sec
#nifi.stateless.extension.client.mvn-central.baseUrl=https://repo1.maven.org/maven2/
#nifi.stateless.extension.client.mvn-central.useSslContext=false

# Kerberos Properties #
nifi.stateless.kerberos.krb5.file={{ NIFI_STATELESS_KERBEROS_KRB5_FILE | default('/etc/krb5.conf') }}
